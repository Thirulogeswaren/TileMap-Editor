{
  "version": 6,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "generator": "Ninja",

      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "${sourceDir}/build/install/${presetName}"
    },
    {
      "name": "linux-build",
      "inherits": "base",

      "architecture": {
        "value": "x64",
        "strategy": "external"
      },

      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_COMPILER": "g++"
      }
    }
  ],

  "buildPresets": [
    {
      "name": "Linux-Build",
      "configurePreset": "linux-build"
    }
  ]
}